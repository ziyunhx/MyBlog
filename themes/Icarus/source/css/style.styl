@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%
  opacity: 1

body
  color: color-default
  background: color-background
  font: font-size font-sans,"Microsoft Yahei","Helvetica Neue"
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -moz-font-feature-settings: "liga","kern"

a
  color: color-link
  text-decoration: none
  &:visited
    color: color-link

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width
  @media mq-mini
    padding: 0

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

.logo
  background-size: cover

#container
  position: relative

#main
  @media mq-normal
    column(main-column)
  @media mq-tablet
    if sidebar
      column(main-column-tablet)
    else
      width: 100%

@import "_extend"
@import "_partial/header"
@import "_partial/profile"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/sidebar"

if sidebar is left
  #main
    float: right
  #profile
    float: right