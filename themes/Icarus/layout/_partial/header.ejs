<header id="header">
  <div id="header-main" class="header-inner">
    <div class="outer">
      <a href="#" id="mobile-logo" class="navigation-menu-button" id="js-mobile-menu"><i class="fa fa-bars mobile-menu-img">&nbsp;</i><span class="site-title"><%= config.title %></span></a>
      <a href="<%- url_for() %>" id="logo"><%- (theme.logo? '<i class="logo" style="background-image: url(' + url_for(theme.logo) + ')"></i>':'') %><span class="site-title"><%= config.title %></span></a>
      
      <!-- Nav -->
      <nav id="main-nav">
        <ul>
          <% for (var i in theme.menu){ %>
            <li class="main-nav-link">
              <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
              <% if(i == "Categories" && site.categories.length) { %>
                <%- list_categories(site.categories, {
                  show_count: false,
                  class: 'main-nav-category',
                  separator: ''
                }) %>
              <% } %>
            </li>
          <% } %>
        </ul>
      </nav>
      <% if(theme.profile) { %>
        <nav id="sub-nav">
          <div class="profile" id="profile-nav">
            <a id="profile-anchor" href="javascript:;"><img class="avatar" src="<%= ( theme.gravatar ? gravatar(theme.email) : url_for(config.avatar)) %>"><i class="fa fa-caret-down"></i></a>
          </div>
        </nav>
      <% } %>
      <div id="search-form-wrap">
        <%- search_form({button: ' '}) %>
      </div>
    </div>
  </div>
  <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
    <% for (var i in theme.menu){ %>
      <a class="link depth-0" target="_blank" href="<%- url_for(theme.menu[i]) %>">
      <span class="indent-0"></span><%= i %></a>
      <% if(i == "Categories" && site.categories.length) { %>
        <%- list_categories(site.categories, {
          show_count: false,
          class: 'main-nav-category',
          separator: ''
        }) %>
      <% } %>
    <% } %>
  </nav>
</header>
